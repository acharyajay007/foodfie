<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bill_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/mar_xs"
    android:padding="@dimen/pad_md"
    tools:context="com.friendfill.foodifie.fragment.HomePagerItemFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:padding="@dimen/pad_xs">


        <TextView
            android:id="@+id/bill_no"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/black_de"
            android:gravity="center"
            android:text="#1000"
            android:textColor="@color/white"
            android:textSize="@dimen/text_xlg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/pad_sm">

            <TextView
                android:id="@+id/bill_customer_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jay Acharya"
                android:textColor="@color/black_de"
                android:textSize="@dimen/text_xlg" />

            <TextView
                android:id="@+id/bill_table_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Table#2"
                android:textColor="@color/black_de"
                android:textSize="@dimen/text_lg" />

            <TextView
                android:id="@+id/bill_grand_total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Rs.500"
                android:textColor="@color/black_de"
                android:textSize="@dimen/text_lg" />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
