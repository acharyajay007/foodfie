<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.friendfill.foodifie.fragment.HomePagerItemFragment">

    <!-- TODO: Update blank fragment layout -->
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/home_page_item_imageview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        fresco:actualImageScaleType="centerCrop"
        fresco:fadeDuration="300"
        fresco:failureImage="@drawable/sample"
        fresco:placeholderImage="@drawable/sample"
        fresco:placeholderImageScaleType="centerCrop"></com.facebook.drawee.view.SimpleDraweeView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/linear_black_transparent_gradient"
        android:orientation="vertical"

        android:padding="@dimen/pad_md">

        <TextView
            android:id="@+id/home_page_item_textview_subtitle"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subtitle"
            android:textColor="@color/white"
            android:textSize="@dimen/text_md" />

        <TextView
            android:id="@+id/home_page_item_textview_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="Title"
            android:textColor="@color/white"
            android:textSize="@dimen/text_xxlg" />
    </LinearLayout>

</FrameLayout>
