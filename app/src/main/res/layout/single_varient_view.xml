<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/pad_xs"
    android:layout_marginTop="@dimen/pad_xs"
    android:orientation="horizontal"
    tools:context="com.friendfill.foodifie.fragment.HomePagerItemFragment">

    <TextView
        android:id="@+id/varient_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_weight="1"
        android:text="Subtitle"
        android:textColor="@color/black_de"
        android:textSize="@dimen/text_md" />

    <TextView
        android:id="@+id/varient_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_weight="1"
        android:text="(1 Kg)"
        android:textColor="@color/black_de"
        android:textSize="@dimen/text_md" />

    <TextView
        android:id="@+id/varient_qty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_weight="1"
        android:text="X 25"
        android:textColor="@color/black_de"
        android:textSize="@dimen/text_md" />

    <TextView
        android:id="@+id/varient_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_weight="1"
        android:text="Rs. 30"
        android:textColor="@color/black_de"
        android:textSize="@dimen/text_md" />
</LinearLayout>
